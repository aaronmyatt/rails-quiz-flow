      <thead>
        <tr>
          <th><abbr title="Category Name">Category Name</abbr></th>
          <th><abbr title="Drilldown Name">Drilldown Name</abbr></th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= form.text_field :category_name %></td>
          <td> <%= form.text_field :drilldown_name %></td>
          <td> 
          <button class="button is-success submit">Create</button>
          </td>
        </tr>
        </tbody>
    </table>
   <% end %>
 
